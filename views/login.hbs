<div class="row">
    <div class="col-md-12">
        <h1>Login</h1>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        {{#if errorMessage}}
        <div class="alert alert-danger"> <strong>Error:</strong> {{errorMessage}}</div> 
        {{/if}}
        <div class="well">
            <form action="/login" method="POST">
               <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input class="form-control" id="user" name="user" type="text" placeholder="User Name" required value="" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input class="form-control" id="password" name="password" type="password" placeholder="Password" required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-success pull-right">&nbsp;&nbsp;&nbsp;Login&nbsp;&nbsp;&nbsp;</button><br/><br />
                        </div>
                    </div>
                </div>
            </form> 
        </div>
    </div>
</div>